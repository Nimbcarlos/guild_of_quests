#:kivy 2.3.0
#: import WipeTransition kivy.uix.screenmanager.WipeTransition

<GameScreenManager>:
    MenuScreen:
    GameplayScreen:

<DialogueBox>:
    text_size: self.size
    valign: "top"
    halign: "left"  

<MenuScreen>:
    name: "menu"
    FloatLayout:
        # Background escuro de fundo
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos

        # Pergaminho de fundo (mais largo)
        Image:
            source: "assets/background_ls.png"
            size_hint: None, None
            size: 800, 600
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            allow_stretch: True
            keep_ratio: False

        # Container principal HORIZONTAL
        BoxLayout:
            orientation: "horizontal"
            spacing: 50
            size_hint: None, None
            size: 800, 500
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            padding: [50, 50, 50, 50]

            # ========== LADO ESQUERDO: LOGO ==========
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                size_hint_x: 0.45

                Image:
                    source: "assets/logo.png"
                    size_hint: None, None
                    size: 400, 350
                    allow_stretch: True
                    keep_ratio: True

            # ========== LADO DIREITO: BOTÕES ==========
            BoxLayout:
                orientation: "vertical"
                spacing: 15
                size_hint_x: 0.55
                padding: [0, 50, 0, 0]

                # New Game
                Button:
                    background_normal: "assets/buttons/new_game.png"
                    background_down: "assets/buttons/new_game.png"
                    size_hint: 1, None
                    height: 90
                    on_release: root.new_game()

                # Load Game
                Button:
                    background_normal: "assets/buttons/load_game.png"
                    background_down: "assets/buttons/load_game.png"
                    size_hint: 1, None
                    height: 90
                    on_release: app.root.current = "loadgame"

                # Settings
                Button:
                    background_normal: "assets/buttons/settings.png"
                    background_down: "assets/buttons/settings.png"
                    size_hint: 1, None
                    height: 90
                    on_release: root.open_settings()

                # Exit
                Button:
                    background_normal: "assets/buttons/exit.png"
                    background_down: "assets/buttons/exit.png"
                    size_hint: 1, None
                    height: 90
                    on_release: root.exit_game()

<GameplayScreen>:
    name: "gameplay"

    FloatLayout:
        # container para centralizar o frame

        ResponsiveFrame:
            id: responsive_frame
            scale_factor: 0.8
            min_size: (800, 600)
            max_size: (1400, 900)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: None, None  # importante

            BoxLayout:
                orientation: "horizontal"
                text_size: self.size
                valign: "top"
                halign: "center"

                # ----------------- PARTE ESQUERDA -----------------
                BoxLayout:
                    orientation: "vertical"
                    size_hint_x: 0.65
                    valign: "top"

                    # ----- Botão de Avançar (fixo) -----
                    BoxLayout:
                        id: turn_log
                        orientation: "horizontal"
                        size_hint_y: 0.08
                        padding: 8
                        spacing: 8
                        canvas.before:
                            Rectangle:
                                source: "assets/background_ls.png"
                                size: self.size
                                pos: self.pos

                        Button:
                            text: "⏩ Avançar Turno"
                            size_hint_x: None
                            width: 150
                            on_release: root.advance_turn()


                    # ----- Área principal de gameplay -----
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: 0.6
                        canvas.before:
                            Rectangle:
                                source: "assets/background_gameplay.png"
                                size: self.size
                                pos: self.pos

                        BoxLayout:
                            id: quest_details
                            orientation: "vertical"
                            padding: 10
                            spacing: 5


                    # ----- Log de missões e falas -----
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: 0.2
                        valign: "top"
                        canvas.before:
                            Rectangle:
                                source: "assets/background_ls.png"
                                size: self.size
                                pos: self.pos

                        Label:
                            text: root.log_messages
                            font_size: 18   # Aumenta a fonte
                            size_hint_y: None
                            height: self.texture_size[1] + 10
                            color: 0, 0, 0, 1

                        ScrollView:
                            id: mission_scroll
                            do_scroll_x: False
                            do_scroll_y: True
                            valign: "top"
                            BoxLayout:
                                id: mission_log
                                orientation: "vertical"
                                size_hint_y: None
                                height: self.minimum_height


                # ----------------- Sidebar (direita) -----------------

                BoxLayout:
                    orientation: "vertical"
                    size_hint_x: 0.30
                    padding: 15
                    spacing: 5
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
                        Rectangle:
                            source: "assets/background.png"
                            size: self.size
                            pos: self.pos

                    # ---------------- SEÇÃO 1: QUESTS ATIVAS ----------------
                    Label: # Título
                        text: root.active_quests_label
                        size_hint_y: None
                        height: 30
                        color: 0, 0, 0, 1

                    ScrollView: # ⬅️ Envolve a lista em um ScrollView
                        size_hint_y: 0.25 # Altura reservada para esta lista (ex: 35% do espaço livre)
                        
                        BoxLayout:
                            id: active_quests # ⬅️ Este é o contêiner interno que o Python preenche
                            orientation: "vertical"
                            size_hint_y: None
                            height: self.minimum_height # Faz o container interno crescer com os botões

                    # ---------------- SEÇÃO 2: QUESTS DISPONÍVEIS ----------------
                    Label: # Título
                        text: root.available_quests_label
                        size_hint_y: None
                        height: 30
                        color: 0, 0, 0, 1

                    ScrollView:
                        size_hint_y: 0.35 # Altura reservada para esta lista
                        
                        BoxLayout:
                            id: available_quests
                            orientation: "vertical"
                            size_hint_y: None
                            height: self.minimum_height

                    # ---------------- SEÇÃO 3: QUESTS CONCLUÍDAS ----------------
                    Label: # Título
                        text: root.completed_quests_label
                        size_hint_y: None
                        height: 30
                        color: 0, 0, 0, 1

                    ScrollView:
                        size_hint_y: 0.3 # Altura reservada (o resto do espaço)
                        
                        BoxLayout:
                            id: completed_quests
                            orientation: "vertical"
                            size_hint_y: None
                            height: self.minimum_height


<SettingsScreen>:
    name: "settings"
    
    FloatLayout:
        # Background preto
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos
        
        # Pergaminho horizontal
        Image:
            source: "assets/background_ls.png"
            size_hint: None, None
            size: 900, 650
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            allow_stretch: True
            keep_ratio: False
        
        # Container principal
        BoxLayout:
            orientation: "vertical"
            size_hint: None, None
            size: 800, 580
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            padding: [40, 40, 40, 40]
            spacing: 20
            
            # ========== TÍTULO ==========
            Label:
                text: "⚙ Configurações"
                font_size: 32
                bold: True
                color: 0.16, 0.09, 0.06, 1
                size_hint_y: None
                height: 50
            
            # ========== CONTEÚDO EM DUAS COLUNAS ==========
            BoxLayout:
                orientation: "horizontal"
                spacing: 40
                
                # ===== COLUNA ESQUERDA =====
                BoxLayout:
                    orientation: "vertical"
                    spacing: 15
                    
                    # Idioma
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        height: 70
                        spacing: 5
                        
                        Label:
                            text: "Idioma:"
                            color: 0.16, 0.09, 0.06, 1
                            size_hint_y: None
                            height: 25
                            halign: "left"
                            text_size: self.size
                        
                        Spinner:
                            id: language_spinner
                            text: root.current_language
                            values: ["pt", "en", "es", "ru", "zh", "ja"]
                            size_hint_y: None
                            height: 40
                            on_text: root.set_language(self.text)
                    
                    # Tamanho da Janela
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        height: 70
                        spacing: 5
                        
                        Label:
                            text: "Tamanho da Janela:"
                            color: 0.16, 0.09, 0.06, 1
                            size_hint_y: None
                            height: 25
                            halign: "left"
                            text_size: self.size
                        
                        Spinner:
                            id: size_spinner
                            text: f"{root.screen_size[0]}x{root.screen_size[1]}"
                            values: ["800x600", "1024x768", "1280x720", "1366x768", "1920x1080"]
                            size_hint_y: None
                            height: 40
                            on_text: root.set_screen_size(self.text)
                    
                    # Tamanho da Tela (Fullscreen)
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        height: 70
                        spacing: 5
                        
                        Label:
                            text: "Tamanho da tela:"
                            color: 0.16, 0.09, 0.06, 1
                            size_hint_y: None
                            height: 25
                            halign: "left"
                            text_size: self.size
                        
                        Spinner:
                            id: mode_spinner
                            text: root.screen_mode
                            values: ["Janela", "Fullscreen"]
                            size_hint_y: None
                            height: 40
                            on_text: root.set_screen_mode(self.text)
                
                # ===== COLUNA DIREITA =====
                BoxLayout:
                    orientation: "vertical"
                    spacing: 15
                    
                    # Volume Música
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        height: 70
                        spacing: 5
                        
                        Label:
                            text: f"Volume música: {int(root.music_volume)}%"
                            color: 0.16, 0.09, 0.06, 1
                            size_hint_y: None
                            height: 25
                            halign: "left"
                            text_size: self.size
                        
                        Slider:
                            id: music_slider
                            min: 0
                            max: 100
                            value: root.music_volume
                            size_hint_y: None
                            height: 40
                            on_value: root.set_music_volume(self.value)
                    
                    # Volume Sons UI
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        height: 70
                        spacing: 5
                        
                        Label:
                            text: f"Volume sons UI: {int(root.ui_volume)}%"
                            color: 0.16, 0.09, 0.06, 1
                            size_hint_y: None
                            height: 25
                            halign: "left"
                            text_size: self.size
                        
                        Slider:
                            id: ui_slider
                            min: 0
                            max: 100
                            value: root.ui_volume
                            size_hint_y: None
                            height: 40
                            on_value: root.set_ui_volume(self.value)
                    
                    # Mute Música
                    BoxLayout:
                        orientation: "horizontal"
                        size_hint_y: None
                        height: 40
                        spacing: 10
                        
                        Label:
                            text: "Mute música:"
                            color: 0.16, 0.09, 0.06, 1
                            halign: "left"
                            valign: "middle"
                            text_size: self.size
                        
                        CheckBox:
                            id: music_mute_check
                            active: root.music_muted
                            size_hint: None, None
                            size: 40, 40
                            on_active: root.toggle_music_mute(self, self.active)
                    
                    # Mute UI
                    BoxLayout:
                        orientation: "horizontal"
                        size_hint_y: None
                        height: 40
                        spacing: 10
                        
                        Label:
                            text: "Mute sons UI:"
                            color: 0.16, 0.09, 0.06, 1
                            halign: "left"
                            valign: "middle"
                            text_size: self.size
                        
                        CheckBox:
                            id: ui_mute_check
                            active: root.ui_muted
                            size_hint: None, None
                            size: 40, 40
                            on_active: root.toggle_ui_mute(self, self.active)
            
            # ========== BOTÃO VOLTAR ==========
            Button:
                text: "↩ Voltar"
                size_hint_y: None
                height: 60
                font_size: 20
                bold: True
                background_color: 0.4, 0.3, 0.2, 1
                color: 0.9, 0.85, 0.7, 1
                on_release: root.go_back()


<Button>:
    background_normal: "assets/buttons/button.png"
    background_down: "assets/buttons/button.png"
    border: 0, 0, 0, 0
    background_color: 1, 1, 1, 1
    font_size: 18
    text_size: self.size
    halign: "center"
    valign: "middle"
    allow_stretch: True