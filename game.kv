#:kivy 2.3.0
#: import WipeTransition kivy.uix.screenmanager.WipeTransition

<GameScreenManager>:
    MenuScreen:
    GameplayScreen:

<DialogueBox>:
    text_size: self.size
    valign: "top"
    halign: "left"  

<GameplayScreen>:
    name: "gameplay"

    FloatLayout:
        # container para centralizar o frame

        ResponsiveFrame:
            id: responsive_frame
            scale_factor: 0.9
            min_size: (800, 600)
            max_size: (1400, 900)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: None, None  # importante

            BoxLayout:
                orientation: "horizontal"
                text_size: self.size
                valign: "top"
                halign: "center"

                # ----------------- PARTE ESQUERDA -----------------
                BoxLayout:
                    orientation: "vertical"
                    size_hint_x: 0.65
                    valign: "top"

                    # ----- Botão de Avançar (fixo) -----
                    BoxLayout:
                        id: turn_log
                        orientation: "horizontal"
                        size_hint_y: 0.08
                        padding: 8
                        spacing: 8
                        canvas.before:
                            Rectangle:
                                source: "assets/background_ls.png"
                                size: self.size
                                pos: self.pos


                    # ----- Área principal de gameplay -----
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: 0.6
                        canvas.before:
                            Rectangle:
                                source: "assets/background_gameplay.png"
                                size: self.size
                                pos: self.pos

                        BoxLayout:
                            id: quest_details
                            orientation: "vertical"
                            padding: 10
                            spacing: 5


                    # ----- Log de missões e falas -----
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: 0.2
                        valign: "top"
                        canvas.before:
                            Rectangle:
                                source: "assets/background_ls.png"
                                size: self.size
                                pos: self.pos

                        Label:
                            text: root.log_messages
                            font_size: 18   # Aumenta a fonte
                            size_hint_y: None
                            height: self.texture_size[1] + 10
                            color: 0, 0, 0, 1

                        ScrollView:
                            id: mission_scroll
                            do_scroll_x: False
                            do_scroll_y: True
                            valign: "top"
                            BoxLayout:
                                id: mission_log
                                orientation: "vertical"
                                size_hint_y: None
                                height: self.minimum_height


                # ----------------- Sidebar (direita) -----------------

                BoxLayout:
                    orientation: "vertical"
                    size_hint_x: 0.30
                    padding: 15
                    spacing: 5
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
                        Rectangle:
                            source: "assets/background.png"
                            size: self.size
                            pos: self.pos

                    # ---------------- SEÇÃO 1: QUESTS ATIVAS ----------------
                    Label: # Título
                        text: root.active_quests_label
                        size_hint_y: None
                        height: 30
                        color: 0, 0, 0, 1

                    ScrollView: # ⬅️ Envolve a lista em um ScrollView
                        size_hint_y: 0.45 # Altura reservada para esta lista (ex: 35% do espaço livre)
                        
                        BoxLayout:
                            id: active_quests # ⬅️ Este é o contêiner interno que o Python preenche
                            orientation: "vertical"
                            size_hint_y: None
                            height: self.minimum_height # Faz o container interno crescer com os botões

                    # ---------------- SEÇÃO 2: QUESTS DISPONÍVEIS ----------------
                    Label: # Título
                        text: root.available_quests_label
                        size_hint_y: None
                        height: 30
                        color: 0, 0, 0, 1

                    ScrollView:
                        size_hint_y: 0.45 # Altura reservada para esta lista
                        
                        BoxLayout:
                            id: available_quests
                            orientation: "vertical"
                            size_hint_y: None
                            height: self.minimum_height

                    # ---------------- SEÇÃO 3: QUESTS CONCLUÍDAS ----------------
                    Label: # Título
                        text: root.completed_quests_label
                        size_hint_y: None
                        height: 30
                        color: 0, 0, 0, 1

                    ScrollView:
                        size_hint_y: 0.1 # Altura reservada (o resto do espaço)
                        
                        BoxLayout:
                            id: completed_quests
                            orientation: "vertical"
                            size_hint_y: None
                            height: self.minimum_height


<Button>:
    background_normal: "assets/buttons/button.png"
    background_down: "assets/buttons/button.png"
    border: 0, 0, 0, 0
    background_color: 1, 1, 1, 1
    font_size: 18
    text_size: self.size
    halign: "center"
    valign: "middle"

<Label>:
    font_name: app.font_name
    font_size: 16